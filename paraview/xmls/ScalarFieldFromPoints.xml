<?xml version="1.0" encoding="UTF-8"?>

<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="ScalarFieldFromPoints" class="ttkScalarFieldFromPoints" label="TTK ScalarFieldFromPoints">
      <Documentation long_help="ScalarFieldFromPoints Long" short_help="ScalarFieldFromPoints Short">
        TODO
      </Documentation>

      <!-- INPUT -->
      <InputProperty name="Input" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPointSet" />
        </DataTypeDomain>
        <Documentation>TODO.</Documentation>
      </InputProperty>

      <DoubleVectorProperty command="SetImageBounds" default_values="0 1 0 1 0 1" name="ImageBounds" number_of_elements="6" panel_visibility="default">
        <BoundsDomain name="bounds">
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </BoundsDomain>
        <Documentation>.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty command="SetResolution" default_values="1 1 1" name="Resolution" number_of_elements="3"></DoubleVectorProperty>
      <DoubleVectorProperty command="SetBandwidth" default_values="1" name="Bandwidth" number_of_elements="1"></DoubleVectorProperty>

      <IntVectorProperty name="Kernel" command="SetKernel" number_of_elements="1" default_values="0">
        <EnumerationDomain name="enum">
          <Entry value="0" text="Gaussian" />
          <Entry value="1" text="Linear" />
          <Entry value="2" text="Epanechnikov" />
        </EnumerationDomain>
        <Documentation>Kernel.</Documentation>
      </IntVectorProperty>

      <!-- DEBUG -->
      ${DEBUG_WIDGETS}

      <!-- MENU CATEGORY -->
      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>