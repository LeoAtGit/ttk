<?xml version="1.0" encoding="UTF-8"?>

<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="ScalarFieldFromPoints" class="ttkScalarFieldFromPoints" label="TTK ScalarFieldFromPoints">
      <Documentation long_help="ScalarFieldFromPoints Long" short_help="ScalarFieldFromPoints Short">
        TODO
      </Documentation>

      <!-- INPUT -->
      <InputProperty name="Input" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkMultiBlockDataSet" />
        </DataTypeDomain>
        <InputArrayDomain name="point_array" number_of_components="1"/>
        <Documentation>TODO.</Documentation>
      </InputProperty>

      <DoubleVectorProperty command="SetImageBounds" default_values="0 1 0 1 0 1" name="ImageBounds" number_of_elements="6" panel_visibility="default">
        <BoundsDomain name="bounds">
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </BoundsDomain>
        <Documentation>.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty command="SetResolution" default_values="1 1 1" name="Resolution" number_of_elements="3"></DoubleVectorProperty>
      <DoubleVectorProperty command="SetBandwidth" default_values="1" name="Bandwidth" number_of_elements="1"></DoubleVectorProperty>

      <IntVectorProperty name="Kernel" command="SetKernel" number_of_elements="1" default_values="0">
        <EnumerationDomain name="enum">
          <Entry value="0" text="Gaussian" />
          <Entry value="1" text="Linear" />
          <Entry value="2" text="Epanechnikov" />
          <Entry value="3" text="Constant" />
        </EnumerationDomain>
        <Documentation>Kernel.</Documentation>
      </IntVectorProperty>

      <StringVectorProperty 
        name="AmpArray"
        label="Amplitude"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="2 0 0 0 Amps">
        <ArrayListDomain 
          name="amps"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the amplitude.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty 
        name="SpArray"
        label="Spread"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="3 0 0 0 Spreads">
        <ArrayListDomain 
          name="spreads"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the spread.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty 
        name="rArray"
        label="Rate"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="4 0 0 0 Rates">
        <ArrayListDomain 
          name="rates"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the rate.</Documentation>
      </StringVectorProperty> 

      <StringVectorProperty 
        name="btArray"
        label="Birth Time"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="5 0 0 0 BirthTimes">
        <ArrayListDomain 
          name="birthtimes"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the birth time.</Documentation>
      </StringVectorProperty> 

      <StringVectorProperty 
        name="dtArray"
        label="Death Time"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="6 0 0 0 DeathTimes">
        <ArrayListDomain 
          name="deathtimes"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the death time.</Documentation>
      </StringVectorProperty>       

      <!-- DEBUG -->
      ${DEBUG_WIDGETS}

      <!-- MENU CATEGORY -->
      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>