<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <SourceProxy name="ttkRandomPointsGenerator" class="ttkRandomPointsGenerator" label="TTK RandomPointsGenerator">
      <Documentation long_help="RandomPointsGenerator Long" short_help="RandomPointsGenerator Short">
        This filter creates a ?.
      </Documentation>

      <!-- OUTPUT PARAMETER WIDGETS -->
      <IntVectorProperty name="nPoints" label="Number of points" command="SetnPoints" number_of_elements="1" default_values="10">
          <Documentation>?</Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="PositionDomain" command="SetPositionDomain" default_values="10 10 10" number_of_elements="3">
          <Documentation>?</Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty name="Amplitude" command="SetAmplitude" default_values="0 1" number_of_elements="2">
          <Documentation>?</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty name="Spread" command="SetSpread" default_values="0 1" number_of_elements="2">
          <Documentation>?</Documentation>
      </DoubleVectorProperty>

      <IntVectorProperty name="RandomSeed" command="SetRandomSeed" number_of_elements="1" default_values="1">
          <Documentation>?</Documentation>
      </IntVectorProperty>

      <!-- Create a UI group that contains all output parameter widgets (here only one) -->
      <PropertyGroup panel_widget="Line" label="Output Options">
        <Property name="nPoints" />
        <Property name="PositionDomain" />
        <Property name="RandomSeed" />
      </PropertyGroup>

      <!-- DEBUG -->
      ${DEBUG_WIDGETS}

      <!-- MENU CATEGORY -->
      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>