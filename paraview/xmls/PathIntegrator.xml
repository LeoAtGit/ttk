<?xml version="1.0" encoding="UTF-8"?>

<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="ttkPathIntegrator" class="ttkPathIntegrator" label="TTK PathIntegrator">
      <Documentation long_help="PathIntegrator Long" short_help="PathIntegrator Short">
      This filter takes points and integrates them using RK4 along a vector field for a user provided time series and time interval. Note that the input arrays are required and the filter will not work without them.
      </Documentation>

      <!-- INPUT DATA OBJECTS -->
      <InputProperty name="Input" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPolyData" />
        </DataTypeDomain>
        <InputArrayDomain name="field_array" attribute_type="field" number_of_components="3"/>
        <InputArrayDomain name="point_array" attribute_type="point" number_of_components="1"/>
        <Documentation>Set of seeding points for the path integrator.</Documentation>
      </InputProperty>

      <!-- INPUT PARAMETER WIDGETS -->

      <!-- This is the VTK way of selecting arrays for processing by calling the SetInputArrayToProcess method -->
      <!-- (see ttkPathIntegrator.cpp for details) -->
      <StringVectorProperty 
        name="IdArray"
        label="Index Array"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="0 0 0 0 Ids">
        <ArrayListDomain 
          name="pointids"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the point ids.</Documentation>
      </StringVectorProperty>

      <StringVectorProperty 
        name="AmpArray"
        label="Amplitude"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="2 0 0 0 Amps">
        <ArrayListDomain 
          name="amps"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the amplitude, which is the scalar value of the feature in its center. </Documentation>
      </StringVectorProperty>

      <StringVectorProperty 
        name="SpArray"
        label="Spread"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="3 0 0 0 Spreads">
        <ArrayListDomain 
          name="spreads"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the spread of the feature, which determines the area of the feature. The scalar value decreases from the center to given boundary in this array..</Documentation>
      </StringVectorProperty>

      <StringVectorProperty 
        name="rArray"
        label="Rate"
        command="SetInputArrayToProcess"
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="4 0 0 0 Rates">
        <ArrayListDomain 
          name="rates"
          input_domain_name="point_array"
          >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the rate of how fast the feature is born and dies.</Documentation>
      </StringVectorProperty>         

      <StringVectorProperty 
        name="DimArray" 
        label="Dimension Array" 
        command="SetInputArrayToProcess" 
        element_types="0 0 0 0 2"
        number_of_elements="5" 
        default_values="1 0 0 2 Dims">
        <ArrayListDomain 
          name="dimensions"
          input_domain_name="field_array"
        >
          <RequiredProperties>
            <Property function="Input" name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>The array that contains the dimension of the domain in which the input points have been seeded.</Documentation>
      </StringVectorProperty>  

      <!-- Create a UI group that contains all input parameter widgets (here only one) -->
      <PropertyGroup panel_widget="Line" label="Input Options">
        <Property name="DimArray" />
        <Property name="IdArray" />
        <Property name="AmpArray" />
        <Property name="SpArray" />
        <Property name="rArray" />
      </PropertyGroup>

      <!-- OUTPUT PARAMETER WIDGETS -->
      <IntVectorProperty name="nTimesteps" label="Number of timesteps" command="SetnTimesteps" number_of_elements="1" default_values="10">
          <Documentation>The length of the time series.</Documentation>
      </IntVectorProperty>

      <DoubleVectorProperty name="TimeInterval" label="Time Interval" command="SetTimeInterval" number_of_elements="1" default_values="0.1">
          <Documentation>The interval between each timestep.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty name="StepLength" label="Step Length" command="SetStepLength" number_of_elements="1" default_values="0.1">
          <Documentation>The length of steps taken along the vector field during the path integration.</Documentation>
      </DoubleVectorProperty>

      <DoubleVectorProperty name="PerlinScaleFactor" label="Perlin Scale Factor" command="SetPerlinScaleFactor" number_of_elements="1" default_values="10.0">
          <Documentation>How much vector fields from perlin are scaled. Lower values yield lower resolution for the perlin fields.</Documentation>
      </DoubleVectorProperty>

      <IntVectorProperty name="VecField" label="Vector Field" command="SetVecField" number_of_elements="1" default_values="0">
        <EnumerationDomain name="enum">
          <Entry value="0" text="Perturbed Perlin" />
          <Entry value="1" text="Perlin Gradient" />
          <Entry value="2" text="Positive Diagonal" />
          <Entry value="3" text="Positive X" />
        </EnumerationDomain>
        <Documentation>The list of vector fields which can be used during the integration.</Documentation>
      </IntVectorProperty>   

      <!-- Create a UI group that contains all output parameter widgets (here only one) -->
      <PropertyGroup panel_widget="Line" label="Output Options">
        <Property name="nTimesteps" />
        <Property name="TimeInterval" />
        <Property name="StepLength" />
        <Property name="PerlinScaleFactor" />
      </PropertyGroup>

      <!-- DEBUG -->
      ${DEBUG_WIDGETS}

      <!-- MENU CATEGORY -->
      <Hints>
        <ShowInMenu category="TTK - Time-Varying Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>