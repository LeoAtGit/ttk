<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="ttkCorrespondenceByOverlap" class="ttkCorrespondenceByOverlap" label="TTK CorrespondenceByOverlap">
      <Documentation long_help="CorrespondenceByOverlap" short_help="CorrespondenceByOverlap">
        TODO
      </Documentation>

      <!-- Inputs -->
      <InputProperty name="Segmentations" port_index="0" command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet" />
          <DataType value="vtkMultiBlockDataSet" />
        </DataTypeDomain>
        <InputArrayDomain name="input_arrays" attribute_type="point" />
        <Documentation>Segmentations.</Documentation>
      </InputProperty>

      <OutputPort index="0" id="port0" name="Correlations" />

      <StringVectorProperty name="Labels" command="SetInputArrayToProcess" element_types="0 0 0 0 2" number_of_elements="5">
        <ArrayListDomain name="array_list" input_domain_name="input_arrays">
          <RequiredProperties>
            <Property function="Input" name="Segmentations" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>Feature Labels (labels smaller 0 are ignored).</Documentation>
      </StringVectorProperty>

      ${DEBUG_WIDGETS}

      <Hints>
        <ShowInMenu category="TTK - Time-Varying Scalar Data" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>