<?xml version="1.0" encoding="UTF-8"?>
<ServerManagerConfiguration>
  <ProxyGroup name="sources">
    <SourceProxy name="ttkPerlinVectorField" class="ttkPerlinVectorField" label="TTK PerlinVectorField">
      <Documentation long_help="PerlinVectorField Long" short_help="PerlinVectorField Short">
        This filter creates a 2D vector field where each components gets it value
        from a Perlin noise function implementation.
      </Documentation>

      <IntVectorProperty command="SetImageDimension" default_values="10 10 0" name="ImageExtent" number_of_elements="3">
          <Documentation>The image dimension of the noise.</Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="Scale" label="Scale" command="SetScale" number_of_elements="1" default_values="10">
          <Documentation>The Scale of the noise.</Documentation>
      </IntVectorProperty>

      <!-- DEBUG -->
      ${DEBUG_WIDGETS}

      <!-- MENU CATEGORY -->
      <Hints>
        <ShowInMenu category="TTK - Misc" />
      </Hints>
    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>